<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      spacing="8.0" styleClass="attendance-history-panel">
    <children>
        <Label fx:id="titleLabel" wrapText="true" styleClass="attendance-history-title" />
        <Label fx:id="subtitleLabel" wrapText="true" styleClass="attendance-history-subtitle" />
        <TableView fx:id="historyTable" VBox.vgrow="ALWAYS">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <columns>
                <TableColumn fx:id="dateColumn" text="Date" prefWidth="150.0" />
                <TableColumn fx:id="classColumn" text="Class" prefWidth="180.0" />
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="150.0" />
            </columns>
        </TableView>
    </children>
</VBox>
